{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "This is an express boilerplate production ready.",
  "scripts": {
    "start": "node -r dotenv/config dist/index.js",
    "start:dev": "nodemon --watch './**/*.ts' --exec ts-node -r dotenv/config src/start.ts",
    "test": "NODE_ENV=test jest --forceExit --detectOpenHandles",
    "build": "tsc && npx tsc-alias"
  },
  "keywords": [
    "express",
    "typeorm",
    "boilerplate",
    "microservice"
  ],
  "author": "Rafael Cascalho",
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "envalid": "^7.1.1",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jaeger-client": "^3.18.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.12",
    "opentracing": "^0.14.5",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.34",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/jest-plugin-context": "^2.9.4",
    "@types/nodemailer": "^6.4.2",
    "jest": "^27.0.4",
    "jest-plugin-context": "^2.9.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.3.7",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
